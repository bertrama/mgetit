<div class="<%= section_css_classes(@user_request, "fulltext_bundle").join(" ") %> umlaut-section-highlighted">

  <% if fulltext_bundle.any? %>
    <ul class="fulltext-sources" id="fulltext-sources">
      <% fulltext_bundle.each do |bundle| %>
      <li>
        <% if bundle.service_data[:urls].article.present? %>
          <a href="<%= bundle.service_data[:urls].article %>" class="button fulltext-read-article">Get Item</a>
        <% else %>
          <% if bundle.service_data[:urls].journal.present? %>
            <a href="<%= bundle.service_data[:urls].journal %>" class="button fulltext-go-to-journal">Get Item</a>
          <% end %>
        <% end %>
        <a class="fulltext-source" href="<%= bundle.service_data[:urls].source %>"><%= bundle.service_data[:headings][:database] %></a>
        <span class="fulltext-date">
        <% if bundle.service_data[:available][:start].present? %>
          <%= bundle.service_data[:available][:start] %> -

          <% if bundle.service_data[:available][:end].present? %>
            <%= bundle.service_data[:available][:end] %>
          <% else %>
            Present
          <% end %>
        <% end %>
        </span>
      </li>
      <% end %>
    </ul>

    <% if fulltext_bundle.length > 1 %>
      <a href="" id="show-more-sources" class="show-more hide">Show <%= fulltext_bundle.length - 1 %> more option<% if fulltext_bundle.length > 2 %>s<% end %></a>
    <% end %>

    <p class="report-broken-link">
      <b>Found a problem?</b> <a href="">Let our team of link fixers know</a>.
    </p>
  <% else %>
    <div class="alert links-not-available">
      <% html_sections(:not_available_online_links_2).each do |link| %>
        <%= content_tag "div", :id => link[:div_id] do %>
          <%= render_section(link) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
