<% if user_request.service_responses.to_a.find { |response| response.service_type_value.name == :disambiguation }.nil? %>
<%
# Get the citation from the user request
cite = user_request.referent.to_citation
@page_title = cite[:title] %>

<h2 class="citation-title"><%= cite[:title] %></h2>
<div class="short-divider"></div>

<div class="citation-container">

  <% if cite[:author].present? %>
    <p class="citation-metadata">By: <%= cite[:author] %></p>
  <% end %>

  <% if cite[:date].present? %>
    <p class="citation-metadata"><span class="citation-label">Publication Date:</span> <%= cite[:date] %></p>
  <% end %>

  <% if [:container_title, :volume, :issue, :page].find {|k| cite[k].present? } %>
    <span class="container-title">Journal: <%= cite[:container_title] %></span>.
  <% end %>
  <% if cite[:volume].present? %>
      <span class="volume"><%="#{t('umlaut.citation.volume').titlecase} #{cite[:volume]}" %></span>.
  <% end %>
  <% if cite[:issue].present? %>
      <span class="issue"><%="#{t('umlaut.citation.issue').titlecase}  #{cite[:issue]}" %></span>.
  <% end %>
  <% if cite[:page].present? %>
      <span class="page"><%="#{t('umlaut.citation.page').titlecase} #{cite[:page]}" %></span>.
  <% end %>

  <% if cite[:issn].present? %>
    <p class="citation-metadata"><span class="citation-label">ISSN:</span> <%= cite[:issn] %></p>
  <% end %>

  <% if cite[:isbn].present? %>
    <p class="citation-metadata"><span class="citation-label">ISBN:</span> <%= cite[:isbn] %></p>
  <% end %>

  <% if user_request.referent.type_of_thing.present? %>
    <p class="resource-type">Resource: <%=user_request.referent.type_of_thing.titlecase %></p>
  <% end %>

  <%
    pmid = cite[:identifiers].map { |id| id.start_with?('info:pmid/') ? id.slice(10, id.length) : nil }.compact.first

    doi  = cite[:identifiers].map { |id| id.start_with?('info:doi/') ? id.slice(9, id.length) : nil}.compact.first
  %>

  <% if pmid.present? %>
    <p class="resource-type">PMID: <%=pmid %></p>
  <% end %>

  <% if doi.present? %>
    <p class="resource-type">DOI: <%=doi %></p>
  <% end %>

</div>
<% end %>
